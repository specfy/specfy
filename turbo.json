{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env"
  ],
  "pipeline": {
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "build": {
      "outputs": [
        "build/**"
      ],
      "dependsOn": [
        "^build",
        "^db:generate"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "build",
        "^db:generate"
      ]
    },
    "test": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^db:generate"
      ]
    },
    "test:ci": {
      "cache": false,
      "persistent": false,
      "dependsOn": []
    }
  }
}
